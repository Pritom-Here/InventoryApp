@using InventoryApp.Models.ViewModels
@model ShopViewModel


<div class="col-lg-3">
    <div class="shop__sidebar">
        <div class="shop__sidebar__search">
            <form action="#">
                <input type="text" placeholder="Search...">
                <button type="submit"><span class="icon_search"></span></button>
            </form>
        </div>
        <div class="shop__sidebar__accordion">
            <div class="accordion" id="accordionExample">

                <div class="card" id="primary-categories">
                    <div class="card-heading">
                        <a data-toggle="collapse" data-target="#collapseOne">Main Categories</a>
                    </div>
                    <div id="collapseOne" class="collapse show" data-parent="#accordionExample">
                        <div class="card-body">
                            <div class="shop__sidebar__categories">
                                @foreach(var category in Model.PrimaryCategories)
                                {
                                    <div class="form-check">
                                      <input class="form-check-input" type="checkbox" value="@category.Id" id="@category.Id">
                                      <label class="form-check-label" for="@category.Id">
                                        @category.Name
                                      </label>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
                
                <div class="card" id="secondary-categories">
                    <div class="card-heading">
                        <a data-toggle="collapse" data-target="#collapseTwo">Categories</a>
                    </div>
                    <div id="collapseTwo" class="collapse show" data-parent="#accordionExample">
                        <div class="card-body">
                            <div class="shop__sidebar__categories">
                                @foreach(var category in Model.SecondaryCategories)
                                {
                                    <div class="form-check">
                                      <input class="form-check-input" type="checkbox" value="@category.Id" id="@category.Id">
                                      <label class="form-check-label" for="@category.Id">
                                        @category.Name
                                      </label>
                                    </div>
                                }

                            </div>
                        </div>
                    </div>
                </div>
                
                @if (Model.TertiaryCategories.Count() > 0)
                {
                    <div class="card" id="tertiary-categories">
                        <div class="card-heading">
                            <a data-toggle="collapse" data-target="#collapseThree">Sub Categories</a>
                        </div>
                        <div id="collapseThree" class="collapse show" data-parent="#accordionExample">
                            <div class="card-body">
                                <div class="shop__sidebar__categories">
                                    @foreach(var category in Model.TertiaryCategories)
                                    {
                                        <div class="form-check">
                                          <input class="form-check-input" type="checkbox" value="@category.Id" id="@category.Id">
                                          <label class="form-check-label" for="@category.Id">
                                            @category.Name
                                          </label>
                                        </div>
                                    }

                                </div>
                            </div>
                        </div>
                    </div>
                    
                }


                <div class="card">
                    <div class="card-heading">
                        <a data-toggle="collapse" data-target="#collapseFour">Branding</a>
                    </div>
                    <div id="collapseFour" class="collapse show" data-parent="#accordionExample">
                        <div class="card-body">
                            <div class="shop__sidebar__brand">
                                @foreach(var brand in Model.Brands)
                                {
                                    <div class="form-check">
                                        <input class="form-check-input" type="checkbox" value="@brand.Id" id="@brand.Id">
                                        <label class="form-check-label" for="@brand.Id">
                                            @brand.Name
                                        </label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>


                <div class="card">
                    <div class="card-heading">
                        <a data-toggle="collapse" data-target="#collapseFive">Filter Price (BDT)</a>
                    </div>
                    <div id="collapseFive" class="collapse show" data-parent="#accordionExample">
                        <div class="card-body">
                            <div class="shop__sidebar__price">
                                @foreach (var price in Model.Prices)
                                {
                                    <div class="form-check">
                                      <input class="form-check-input" type="radio" name="@price.Id" id="@price.Id" value="@price.Id">
                                      <label class="form-check-label" for="@price.Id">
                                        @price.MinPrice - @price.MaxPrice
                                      </label>
                                    </div>
                                }
                            </div>
                        </div>
                    </div>
                </div>


