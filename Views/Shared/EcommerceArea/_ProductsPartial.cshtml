@using InventoryApp.Models.ViewModels
@model ShopViewModel



<div class="row">

@foreach (var product in Model.Products)
{
    var productImage = product.ProductImages.First();

    <div class="col-lg-4 col-md-6 col-sm-6">
        <div class="product__item">
            <div class="product__item__pic set-bg" data-setbg='@Url.Content("~/images/products/"+ @productImage.ImageName)'>
                <ul class="product__hover">
                    <li><a href="#"><img src="~/images/template/customer/icon/heart.png" alt="add to wishlist"></a></li>
                </ul>
            </div>
            <div class="product__item__text">
                <h6> @product.Name </h6>
                <a href="#" class="add-cart">+ Add To Cart</a>
                <div class="rating">
                    <i class="fa fa-star-o"></i>
                    <i class="fa fa-star-o"></i>
                    <i class="fa fa-star-o"></i>
                    <i class="fa fa-star-o"></i>
                    <i class="fa fa-star-o"></i>
                </div>
                <h5> @product.Price @product.Currency/@product.Unit </h5>
                <div class="product__color__select">
                    <label for="pc-4">
                        <input type="radio" id="pc-4">
                    </label>
                    <label class="active black" for="pc-5">
                        <input type="radio" id="pc-5">
                    </label>
                    <label class="grey" for="pc-6">
                        <input type="radio" id="pc-6">
                    </label>
                </div>
            </div>
        </div>
    </div>
}

</div>


